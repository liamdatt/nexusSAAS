{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://nexus.local/contracts/event-envelope.schema.json",
  "title": "Tenant Runtime Event",
  "type": "object",
  "required": ["tenant_id", "type", "payload", "created_at"],
  "properties": {
    "tenant_id": {
      "type": "string",
      "minLength": 1
    },
    "type": {
      "type": "string",
      "enum": [
        "runtime.status",
        "runtime.log",
        "whatsapp.qr",
        "whatsapp.connected",
        "whatsapp.disconnected",
        "runtime.error",
        "config.applied"
      ]
    },
    "payload": {
      "type": "object",
      "additionalProperties": true
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
